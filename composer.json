{
    "name": "dotzero/amocrm",
    "description": "Удобный и быстрый клиент для работы с API amoCRM",
    "license": "MIT",
    "keywords": ["amocrm", "crm", "api"],
    "authors": [
        {
            "name": "dotzero",
            "email": "mail@dotzero.ru"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*"
    },
    "suggest": {
        "monolog/monolog": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AmoCRM\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmoCRM\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    }
}
